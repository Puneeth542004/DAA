#include <stdio.h>

int sum_of_digits(int num) {
    int sum = 0;
    while (num > 0) {
        sum += num % 10;
        num /= 10;
    }
    return sum;
}

int max_sum(int nums[], int n) {
    int max_sum = -1;
    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            if (sum_of_digits(nums[i]) == sum_of_digits(nums[j])) {
                int current_sum = nums[i] + nums[j];
                if (current_sum > max_sum) {
                    max_sum = current_sum;
                }
            }
        }
    }
    return max_sum;
}

int main() {
    int nums[] = {3, 8, 12, 7};
    int n = sizeof(nums) / sizeof(nums[0]);
    printf("Maximum sum: %d\n", max_sum(nums, n));
    return 0;
}
